{% extends 'base.html.twig' %}

{% block body %}    
<div class="container-fluid text-center"> 

    <h1>{{ hotel.name }} de <span>{{ hotel.city }}</span></h1>
    <h5>{{ hotel.address }} {{ hotel.city }}</h5>
    <p class="py-3">{{ hotel.description }}</p>
    <h3 class="py-3"> Les Suites </h3>

    {% for suite in hotel.suites %}  
        <div class="row py-3">
            <div class="col"></div>  
            <div class="col col-lg-10 col-md-10 col-sm-11 col-12" >            
                <div class="card bg-transparent border-0 text-center">
                    <img src="{{ vich_uploader_asset(suite ,'imageFile') }}" class="card-img-top" width="1200" height="auto" alt="{{ suite.image }}">
                    <div class="card-body">
                        <h3>{{ suite.title }} Hotel {{ hotel.name }}</h3>
                        <h5>Prix pour une nuit : {{ suite.price }} â‚¬</h5>
                        <p class="card-text">{{ suite.description }}</p>     
                        <div >
                            <a href= "{{ path('suite_show', {'id': suite.id}) }}" class="btn btn-info" role="button">Voir cette Suite</a> 
                        </div>
                         <div >                             
                            <a href= "{{ path('register') }}" class="btn btn-success my-3"  role="button">Reserver cette Suite</a>                          
                        </div>                  
                    </div>
                </div>  
            </div>   
            <div class="col"></div>                
        </div>  
    {% endfor %}       
</div>    
{% endblock %}
