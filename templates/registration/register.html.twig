{% extends 'base.html.twig' %}

{% block title %}S'enregistrer{% endblock %}

{% block body %}
<div class="row text-center mb-5">
  <div class="col"></div>  
    <div class="col col-lg-5 col-md-8 col-sm-10 col-12 color2 py-3" >     
    
    {{ form_start(registrationForm) }}
          {{ form_row(registrationForm.lastName, {
            label: 'Nom'
        }) }}
        {{ form_row(registrationForm.firstName, {
            label: 'Prénom'
        }) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}      
        {{ form_row(registrationForm.agreeTerms, {
            label: 'Accord avec les conditions ( voir CGV dans Mentions Légales )'
        }) }}

        <button type="submit" class="btn btn-success my-3">Valider</button>

    {{ form_end(registrationForm) }}

    </div>
  <div class="col"></div>       
</div>    
{% endblock %}
