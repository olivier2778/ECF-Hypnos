{% extends 'base.html.twig' %}

{% block title %}Votre Reservation{% endblock %}

{% block body %}
	<div class="container-fluid text-center">
		<div class="row py-5">
			<div class="col"></div>
			<div class="col col-lg-4 col-md-6 col-sm-9 col-12">

				<table class="table text_color">
					<tbody>
						<tr>
							<th>Hotel</th>
							<td>{{ reservation.suite.hotel }} - {{ reservation.suite.hotel.city }}</td>
						</tr>
						<tr>
							<th>Suite</th>
							<td>{{  reservation.suite.title}}</td>
						</tr>
						<tr>
							<th>Date d'Arrivée</th>
							<td>{{ reservation.checkIn ? reservation.checkIn|date('d-m-Y') : '' }}</td>
						</tr>
						<tr>
							<th>Date de Depart</th>
							<td>{{ reservation.checkOut ? reservation.checkOut|date('d-m-Y') : '' }}</td>
						</tr>
						<tr>
							<th>Reservé le</th>
							<td>{{ reservation.createdAt ? reservation.createdAt|date('d-m-Y') : '' }}</td>
						</tr>
					</tbody>
				</table>

				
				<a href= "{{ path('booking_index') }}" class="btn btn-info my-3"  role="button">Retour</a>      			

				{{ include('booking/_delete_form.html.twig') }}

			</div>
			<div class="col"></div>
		</div>
	</div>
{% endblock %}
