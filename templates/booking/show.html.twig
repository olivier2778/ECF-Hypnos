{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
	<div class="container-fluid text-center">
		<div class="row py-5">
			<div class="col"></div>
			<div class="col col-lg-06 col-md-08 col-sm-10 col-12">

				<table class="table">
					<tbody>
						<tr>
							<th>Date d'Arrivée</th>
							<td>{{ reservation.checkIn ? reservation.checkIn|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Date de Depart</th>
							<td>{{ reservation.checkOut ? reservation.checkOut|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
						<tr>
							<th>Reservé le</th>
							<td>{{ reservation.createdAt ? reservation.createdAt|date('Y-m-d H:i:s') : '' }}</td>
						</tr>
					</tbody>
				</table>

				<a href="{{ path('booking_index') }}">back to list</a>				

				{{ include('booking/_delete_form.html.twig') }}

			</div>
			<div class="col"></div>
		</div>
	</div>
{% endblock %}
