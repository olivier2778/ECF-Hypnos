{% extends 'base.html.twig' %}

{% block body %}

<div class="container-fluid">
   <div class="text-center">    

    <h5 class="mb-5">Pour vous connecter à votre compte <br> Veuillez saisir votre loggin et votre mot de passe</h5>      

    {% if error %}       
        <h3>Vous n'êtes pas autorisé !</h3>  
    {% endif %}

    <div class="row">
        <div class="col"></div>  
            <div class="col col-lg-5 col-md-8 col-sm-10 col-12" >     

                <form action="{{ path('login') }}" method="post" class="color2 py-3 px-3">

                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}" aria-describedby="emailHelp" placeholder="Votre email">
                    </div>

                    <div class="form-group my-3">                 
                        <label for="password">Mot de passe :</label>
                        <input type="password" class="form-control" id="password" name="_password" placeholder="Password"/>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">    
                        <input type="hidden" name="_target_path" value="{{ path('hotel_index') }}"/>                             
                    </div> 

                    <button class="btn btn-success my-3" type="Se Logger">Valider</button>
                    
                </form>

                <div class="my-5 color2 py-4">
                    <div> 
                        <p> Vous n'avez pas de compte , vous souhaitez en créer un </p>
                        <a href= "{{ path('register') }}" class="btn btn-primary" role="button">S'inscrire</a>
                    </div> 
                </div>

            </div>     
        <div class="col"></div>       
    </div>    

   </div>  
</div>  
   
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>

  </script>
{% endblock %}

