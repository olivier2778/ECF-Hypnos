<!doctype html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">        
        <title>Hypnos</title>
        {%  block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/styles/style.css') }}">  
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
        {% endblock stylesheets %}
    </head>  
    
    <body>
        <div class="container-fluid">
            <header class="row">
                <div class="col p-5">     
                    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">                    
                        <span class="navbar-text mx-3 h2">Hypnos</span>   
                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNavDropdown">
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('hotel') }}">Accueil</a>    
                                </li>      
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('hotel') }}">Nos hotels</a>    
                                </li>     
                                <li class="nav-item">                        
                                    <a class="nav-link" href="{{ path('login') }}">Connexion</a>  
                                </li> 
                                <li class="nav-item">                        
                                    <a class="nav-link" href="{{ path('register') }}">S'inscrire</a>  
                                </li> 
                        
                                {% if is_granted('ROLE_USER') %}                      
                                        <li class="nav-item dropdown">
                                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="client" role="button" aria-expanded="false">Mon compte client</a>
                                            <ul class="dropdown-menu">
                                                <li><a class="dropdown-item" href="{{path('hotel')}}">Voir mes reservations</a></li>                                     
                                                <li><a class="dropdown-item" href="{{path('hotel')}}">Faire une reservation</a></li>                              
                                            </ul>
                                        </li>   
                                        <li class="nav-item">    
                                            <a class="nav-link" href="{{ path('logout') }}">DÃ©connexion</a>
                                        </li>                        
                                {% endif %}

                                 {% if is_granted('ROLE_ADMIN') %}                     
                                        
                                        <li class="nav-item">    
                                            <a class="nav-link" href="{{ path('admin') }}">Panneau d'Administration</a>
                                        </li>                        
                                {% endif %}

                            </ul>
                        </div>                    
                    </nav>
                </div>
            </header>
        </div>

        <div class="container-fluid">         
            <main class="row align-items-center ">
                <div class="col">   

                    <div class="h1 text-center py-5">
                        {% block title %}{% endblock %}
                    </div>   

                    {% block body %} {% endblock body %}  

                    <footer></footer>

                </div>
            </main>
        </div>
    </body>  

</html>